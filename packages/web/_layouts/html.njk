<!doctype html>
<html lang="{{ lang }}" class="xl:text-xl">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Read after turbolinks:load to update <html> #}
    <meta http-equiv="content-language" content="{{ lang }}">

    <title>
      {{ titlePrefix }}{{ " - " if titlePrefix }}
      {{ title | lang | default(site.name) | safe }}
    </title>
    <link rel="stylesheet" href="{{ '/main.css' | url }}">
    <link rel="stylesheet" href="{{ site.googleFonts }}" >
    {% include 'seo-links.njk' %}
    <script>
      window.ga = window.ga || function() {
        (ga.q = ga.q || []).push(arguments)
      }
      ga.l=+new Date
      ga('create', '{{ site.googleAnalytics }}', 'auto')
    </script>
    <script src="{{ '/main.es5.js' | url }}" async nomodule></script>
    <script src="{{ '/main.esm.js' | url }}" async type="module"></script>
    <script src="https://www.google-analytics.com/analytics.js" async></script>
  </head>
  <body class="{{ bodyClass }} px-2 pb-24" {{ bodyData | dataAttributes }}>
    {{ content | safe }}
    <script>ga('send', 'pageview')</script>
  </body>
</html>