<!doctype html>
<html lang="{{ lang }}" class="xl:text-xl">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Read after turbolinks:load to update <html> #}
    <meta http-equiv="content-language" content="{{ lang }}">

    <title>
      {{ titlePrefix }}{{ " - " if titlePrefix }}
      {{ title | lang | default(site.name) | safe }}
    </title>
    <link rel="stylesheet" href="{{ '/main.css' | url }}">
    <link href="{{ site.googleFonts }}" rel="stylesheet">
    <script>
      window.dataLayer = window.dataLayer || [['js', new Date()]]
      function vekPageView() {
        dataLayer.push([
          'config',
          '{{ site.googleAnalytics }}',
          { page_location: location.href }
        ])
      }
    </script>
    <script src="{{ '/main.js' | url }}" async></script>
    <script src="https://www.googletagmanager.com/gtag/js?id={{ site.googleAnalytics }}" async></script>
  </head>
  <body class="{{ bodyClass }} px-2 pb-24" {{ bodyData | dataAttributes }}>
    {{ content | safe }}
    <script>vekPageView()</script>
  </body>
</html>