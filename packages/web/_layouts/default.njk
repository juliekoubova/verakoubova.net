---
layout: html
---
<div
  {% if fixedHeaderOnly %}
  class="pt-20"
  {% else %}
  data-controller="fixed-header"
  {% endif %}
>
  <div class="sidebar-container">
    <main class="sidebar">
      {{ content | safe }}
    </main>
  </div>

  <div
    class="shadow-lg fixed bg-white-3/4 bg-blur top-0 left-0 right-0 z-10 px-2"
    {% if not fixedHeaderOnly %}
    data-target="fixed-header.fixedHeader"
    hidden
    {% endif %}
    >
    <div class="sidebar-container">
      {% set breadcrumbLeaf = true %}
      {% include 'header.njk' %}
    </div>
  </div>
</div>