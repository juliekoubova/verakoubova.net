{
  "name": "@verakoubova/web",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Julie Koubov√° <julie@koubova.net>",
  "license": "PRIVATE",
  "private": true,
  "scripts": {
    "clean": "shx rm -rf _site .cache",
    "dev": "npm-run-all -s clean -p start dev:*",
    "dev:parcel-css": "parcel watch _assets/main.css --out-dir _site --no-hmr",
    "dev:parcel-js": "parcel watch _assets/main.ts --out-dir _site --no-hmr",
    "build": "cross-env NODE_ENV=production run-s clean build:parcel build:eleventy build:postcss-after",
    "build:eleventy": "eleventy --output _site",
    "build:parcel": "parcel build _assets/main.css _assets/main.ts --out-dir _site",
    "build:postcss-after": "postcss ./_site/main.css --config ./_postcss_after --replace --map",
    "debug": "node --inspect-brk ./node_modules/.bin/eleventy",
    "serve": "run-s build && ws --directory _site --port 8080",
    "start": "eleventy --serve --quiet --output _site"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0-beta.3",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@mightyplow/eleventy-plugin-cache-buster": "^1.1.3",
    "@verakoubova/11ty-plugins": "0.0.0",
    "@verakoubova/resizer": "0.0.0",
    "@verakoubova/types__eleventy": "0.0.0",
    "autoprefixer": "^9.7.6",
    "cssnano": "^4.1.10",
    "eleventy-plugin-safe-external-links": "^0.1.4",
    "fast-glob": "^3.2.2",
    "js-yaml": "^3.13.1",
    "local-web-server": "^4.0.0",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^7.1.0",
    "probe-image-size": "^5.0.0",
    "tailwind-vertical-rhythm": "^1.1.0",
    "tailwindcss": "^1.2.0",
    "tailwindcss-scroll-snap": "^1.0.1"
  },
  "dependencies": {
    "@stimulus/mutation-observers": "^1.1.1",
    "@types/turbolinks": "^5.2.0",
    "eleventy-plugin-images-responsiver": "^1.5.3",
    "stimulus": "^1.1.1",
    "turbolinks": "^5.2.0"
  }
}
