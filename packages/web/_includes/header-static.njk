<header
  class="flex items-end justify-between pt-8 md:pt-16"
  data-target="fixed-header.staticHeader"
  >
  {% set breadcrumbLeaf = false %}
  {% include 'breadcrumb.njk' %}
  {% include 'lang-switcher.njk' %}
</header>

<hgroup class="pb-6">
  <h2 class="vr-normal-3xl xl:font-light">
    {{ bodyTitle | default(title) | safe }}
  </h2>

  {% if subtitle %}
  <h3 class="vr-normal-xl font-medium">
    {{ subtitle | safe }}
  </h2>
  {% endif %}
</hgroup>