<nav class="my-4 flex justify-between vr-loose-xs sm:vr-normal-sm" data-fixed-header-target="staticHeader">
  <ol class=" flex flex-wrap content-end">
    {% for item in page | vekNav %}
    <li>
      <a href="{{ item.url }}">{{ item.label }}</a>
      <span aria-hidden="true">&rsaquo;&nbsp;</span>
    </li>
    {% endfor %}
  </ol>
  <div class="flex-none ml-4">
    {% include 'lang-switcher.njk' %}
  </div>
</nav>

<hgroup class="pb-6">
  <h2 class="vr-normal-3xl xl:font-light">
    {{ bodyTitle | default(title) | safe }}
  </h2>

  {% if subtitle %}
  <h3 class="vr-normal-xl font-medium">
    {{ subtitle | safe }}
  </h2>
  {% endif %}
</hgroup>