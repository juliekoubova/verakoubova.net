{% set left = img.left %}
{% set right = img.right %}

{% set blockClass = 'snap-start sm:snap-none pt-20 pb-12 sm:pt-0 sm:pb-0 h-screen sm:h-full sm:w-1/2' %}
{% from 'macros.njk' import figure %}

<div class="sm:flex max-h-full sm:max-h-2xl/2 lg:max-h-4xl/2">
  <div class="sm:mx-4 {{ blockClass }}">
    {{ figure(
            left,
            imageBase | ensureTrailingSlash,
            'bottom', 'right'
      ) }}
  </div>
  <div class="sm:mx-4 {{ blockClass }}">
    {{ figure(
            right,
            imageBase | ensureTrailingSlash,
            'bottom', 'left'
      ) }}
  </div>
</div>