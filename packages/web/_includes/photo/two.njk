{% set left = img.left %}
{% set right = img.right %}
{% set blockClass = blockClass + 'sm:mx-4 sm:w-1/2' %}

{% from 'macros.njk' import figure %}

<div class="sm:flex max-h-full sm:max-h-2xl/2 lg:max-h-4xl/2">
  <div class="{{ blockClass }}">
    {{ figure(
            left,
            imageBase | ensureTrailingSlash,
            'bottom', 'right'
      ) }}
  </div>
  <div class="{{ blockClass }}">
    {{ figure(
            right,
            imageBase | ensureTrailingSlash,
            'bottom', 'left'
      ) }}
  </div>
</div>