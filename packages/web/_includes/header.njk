{% set headerPadding = 'pt-8 pb-6' %}
{% if inPageNav %}
{%   set headerPadding = 'py-4' %}
{% endif %}
<header
  class="flex flex-wrap justify-between {{ headerPadding }} md:pt-16"
  {% if inPageNav %}
  data-controller="breadcrumb"
  {% endif %}
  >
  <div class="{{ 'mb-4 sm:mb-2' if not inPageNav }}">
    <nav class="vr-normal-sm">
      <ol class="inline">
        {% for item in page | vekNav %}
        <li class="inline">
          <a href="{{ item.url }}">{{ item.label }}</a>
          <span aria-hidden="true">&rsaquo;</span>
        </li>
        {% endfor %}

        {% if inPageNav %}
        <li hidden class="inline lf-before sm:no-lf-before" data-target="breadcrumb.parentItem">
          <a class="inline" data-target="breadcrumb.parentAnchor" data-action="breadcrumb#goUp">{{
            bodyTitle | default(title) | safe
          }}</a>
        </li>
        <li class="inline" data-target="breadcrumb.leafItem">
          <span aria-hidden="true">&rsaquo;</span>
          <h2 class="inline" data-target="breadcrumb.leafHeading">{{
            bodyTitle | default(title) | safe
          }}</h2>
        </li>
        {% endif %}
      </ol>
    </nav>

    {% if not inPageNav %}
    {% include 'header/title.njk' %}
    {% endif %}
  </div>
  <nav class="vr-normal-sm mb-2 sm:text-right">
    {% include 'lang-switcher.njk' %}
  </nav>
</header>
