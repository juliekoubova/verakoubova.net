{
  "name": "vek",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Julie Koubov√° <julie@koubova.net>",
  "license": "PRIVATE",
  "private": true,
  "scripts": {
    "clean:plugins": "cd _plugins && run-s clean",
    "clean:site": "shx rm -rf _site .cache",
    "clean": "run-p clean:*",
    "dev": "npm-run-all -s clean build:plugins -p start dev:*",
    "dev:parcel-css": "parcel watch _assets/main.css --out-dir _site --no-hmr",
    "dev:parcel-js": "parcel watch _assets/main.ts --out-dir _site --no-hmr",
    "build": "cross-env NODE_ENV=production run-s clean build:plugins build:parcel build:eleventy build:postcss-after build:serve",
    "build:eleventy": "eleventy --output _site",
    "build:plugins": "cd _plugins && run-s build",
    "build:parcel": "parcel build _assets/main.css _assets/main.ts --out-dir _site",
    "build:postcss-after": "postcss ./_site/main.css --config ./_postcss_after --replace --map",
    "build:serve": "http-server _site",
    "start": "eleventy --serve --quiet --output _site",
    "deploy": "run-s build deploy:push-dir",
    "deploy:push-dir": "push-dir --dir=_site --branch=master"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0-beta.3",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@mightyplow/eleventy-plugin-cache-buster": "^1.1.3",
    "autoprefixer": "^9.7.6",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "eleventy-plugin-safe-external-links": "^0.1.4",
    "fast-glob": "^3.2.2",
    "http-server": "^0.12.1",
    "js-yaml": "^3.13.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^7.1.0",
    "probe-image-size": "^5.0.0",
    "push-dir": "^0.4.1",
    "shx": "^0.3.2",
    "tailwind-vertical-rhythm": "^1.1.0",
    "tailwindcss": "^1.2.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "animations.css": "^1.0.1",
    "eleventy-plugin-images-responsiver": "^1.5.3",
    "stimulus": "^1.1.1"
  }
}
