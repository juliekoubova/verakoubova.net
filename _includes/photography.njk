---
layout: layouts/sidebar
pageId: photography
hasSidebar: true
---
{% for section in photography | dictsort %}
<section id="{{ section[1].slug | lang }}" class="mb-8">
  <h2 class="font-semibold vr-xl md:vr-normal-lg">{{ section[1] | lang | nl2br | safe }}</h2>
  <ul class="mt-2">
  {% for row in section[1].rows %}
    <li class="mb-2 sidebar-section">
      <h3 class="in-sidebar vr-base">
      {% if row.href %}<a href="{{ row.href | lang }}">{% endif %}
      {{ row | lang | nl2br | safe }}
      {% if row.href %}</a>{% endif %}
      </h3>
      <div class="vr-base">
      {% for inst in row.instances %}
        {% if loop.first %}<ul>{% endif %}
        {% if loop.length > 1 %}<li>{% endif %}
        {{ inst.year }}
        {{ inst | lang | nl2br | safe }}
        {% if loop.length > 1 %}</li>{% endif %}
        {% if loop.last %}</ul>{% endif %}
      {% endfor %}
      </div>
    </li>
  {% endfor %}
  </ul>
</section>
{% endfor %}