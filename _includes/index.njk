---
layout: layouts/html
hasSidebar: true
htmlClass: scroll-snap-y-proximity md:scroll-snap-y-mandatory
---
{% extends 'sidebar.njk' %}

{% block before %}
<h1 class="sr-only">{{ title }}</h1>

<div class="scroll-snap-align-start">
  {% from 'macros.njk' import image %}
  <div class="
    mx-auto max-w-xs flex flex-col flex-wrap px-2
    sm:min-h-screen sm:max-w-none sm:flex-row-reverse sm:items-center"
    >
    <div class="vr-normal-base max-w-xs flex-shrink-0 xl:pl-3 sm:max-w-none sm:flex-basis-1/2">
      <div class="max-w-xs text-right">
        {% include 'lang-switcher.njk' %}
        {{ image(img) }}
      </div>
    </div>
    <nav class="
      vr-tight-4xl text-right tracking-tight
      sm:flex-basis-1/2 sm:pr-2 xl:pr-4 sm:vr-normal-4xl
      bignav
      ">
      {{ content | safe }}
    </nav>
  </div>

  {% include 'scroll-enticer.njk' %}
</div>
<div class="scroll-snap-align-start">
{% endblock %}

{% block content %}
  {% for post in posts | reverse %}
  <article class="scroll-snap-align-start sidebar-section">
    <h2 class="in-sidebar">{{ post.title | lang }}</h2>
    <p>{{ post | lang | safe }}</p>
  </article>
  {% endfor %}
{% endblock %}

{% block after %}
</div>
{% endblock %}