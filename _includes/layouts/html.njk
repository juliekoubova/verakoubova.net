<!doctype html>
<html lang="{{ lang }}" class="xl:text-xl">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Read after turbolinks:load to update <html> #}
    <meta http-equiv="content-language" content="{{ lang }}">

    <title>
      {{ titlePrefix }}{{ " - " if titlePrefix }}
      {{ title | lang | default(site.name) | safe }}
    </title>
    <link rel="stylesheet" href="{{ '/main.css' | url }}">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&family=Roboto:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">
    <script src="{{ '/main.js' | url }}" async></script>
  </head>
  <body
    class="{{ bodyClass }} px-2 pb-24"
    data-controller="{{ bodyController }}"
    >
    {{ content | safe }}
  </body>
</html>