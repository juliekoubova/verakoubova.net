{% from 'macros.njk' import image %}

<ol>
{% for img in gallery.images %}
  {% set left = img.left | lang | itemContent(gallery.imageBase) | trim %}
  {% set right = img.right | lang | itemContent(gallery.imageBase) | trim %}
  {% set blockClass = 'snap-start sm:snap-none sm:flex-basis-1/2 pt-20 sm:pt-0 h-screen sm:h-auto' %}
  <li
    class="sm:h-screen sm:py-32 sm:flex items-center"
    data-title="{{ img | lang }}"
    id="{{ img | lang | slug }}"

    {% if loop.first %}
    data-navigation-ignore
    {% endif %}
    >
    <h3 class="sr-only">{{ item | lang }}</h3>

    <div class="sm:max-h-full sm:flex sm:max-w-2xl mx-auto">
      {% if left %}
      <div class="{{ blockClass }}">{{ left | safe }}</div>
      {% endif %}

      <div
        class="sm:mx-4 {{ blockClass }}"

        {% if loop.first %}
        data-target="snap-type.determineBy"
        {% endif %}
      >
        {{ image(
                img,
                gallery.imageBase | ensureTrailingSlash,
                class='object-scale-down sm:object-right-top h-full w-full'
          ) }}
      </div>

      {% if right %}
      <div class="{{ blockClass }}">{{ right | safe }}</div>
      {% endif %}
    </div>

  </li>
{% endfor %}
</ol>