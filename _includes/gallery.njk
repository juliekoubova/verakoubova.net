{% from 'macros.njk' import image %}

{% for img in gallery.images %}
  {% set left = img.left | lang | itemContent(gallery.imageBase) | trim %}
  {% set right = img.right | lang | itemContent(gallery.imageBase) | trim %}
  <li class="
    h-screen flex md:snap-start items-center
    pt-16 pb-12 md:pt-40 md:pb-32
  ">
    <div class="flex-1 snap-start md:snap-none">{{ left | safe }}</div>

    <div class="flex-1 snap-start md:snap-none md:mx-4">
      {{ image(
              img,
              gallery.imageBase | ensureTrailingSlash,
              class='object-scale-down h-full'
        ) }}
    </div>

    <div class="flex-1 snap-start md:snap-none">{{ right | safe }}</div>
  </li>
{% endfor %}