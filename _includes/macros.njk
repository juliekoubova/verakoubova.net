{% macro image(img, base = '') %}
{% if img %}
{% set src = base | lang + img.src | lang %}
  <img
    class="max-w-full"
    alt="{{ img.alt | lang }}"
    src="{{ src | url }}"
    width="{{ img.width }}"
    height="{{ img.heigth }}"
  >
{% endif %}
{% endmacro %}

{% macro galleryLink(set, key) %}
{% set gallery = set[key] %}
<a href="{{ key | url }}" data-gallery="{{ gallery | prepareGalleryData | dump | escape }}">{{ gallery | lang }}</a>
{% endmacro %}
