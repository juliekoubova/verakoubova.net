---
layout: layouts/sidebar
pageId: bibliography
---
{% for b in bibliography | dictsort %}
<section id="{{ b[0] }}" class="sidebar-section mb-4">
  <h3 class="in-sidebar vr-base">{{ b[1].name }} </h3>
  <ul class="font-body">
    {% for pub in b[1].publications %}
    {% set published = pub.published | lang %}
    <li class="{{ 'mb-2' if not loop.last }}">
      <div class="flex flex-wrap vr-base">
        <div class="mr-1">
          <em>{{ pub.translated }}</em>
          ({{ pub.original | lang }}){{ ", " if published }}
        </div>
        {% if published %}
        <div>{{ published }}</div>
        {% endif %}
      </div>
      {% for note in pub.notes %}
      <div class="vr-base">{{ note | lang }}</div>
      {% endfor %}
    </li>
    {% endfor %}
  </ul>
</section>
{% endfor %}