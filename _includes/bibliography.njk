---
layout: body
hasSidebar: true
---
{% for b in bibliography | dictsort %}
<section id="{{ b[0] }}" class="sidebar-section">
  <h2 class="in-sidebar vr-relaxed-base">{{ b[1].name }} </h2>
  <ul class="vr-relaxed-base">
    {% for pub in b[1].publications %}
    {% set published = pub.published | lang %}
    <li class="mb-2">
      <div class="flex flex-wrap">
        <div class="mr-1">
          <em>{{ pub.translated }}</em>
          ({{ pub.original | lang }}){{ ", " if published }}
        </div>
        {% if published %}
        <div>{{ published }}</div>
        {% endif %}
      </div>
      {% for note in pub.notes %}
      <div>{{ note | lang }}</div>
      {% endfor %}
    </li>
    {% endfor %}
  </ul>
</section>
{% endfor %}