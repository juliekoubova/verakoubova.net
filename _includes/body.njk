---
layout: default
---
<div class="mx-2 lg:mx-auto lg:grid grid-cols-7 max-w-6xl my-4">
  {% set mainGrid = "col-start-2 col-end-7" %}

  <div class="{{ mainGrid }} mb-2">
    {% include 'nav.njk' %}
    <h1>{{ title }}</h1>
  </div>

  {% from 'macros.njk' import image %}

  {% if img %}
  <div class="col-start-1 col-end-1 vr-loose-base">
    {{ image(img) }}
  </div>
  {% endif %}

  <main class="mt-2 {{ mainGrid }} {{ mainClass }}">
    {{ content | safe }}
  </main>
</div>